{
  "name": "alldigitalrewards/language-mapper",
  "description": "Language Mapper Library",
  "type": "library",
  "license": "MIT",
  "require": {
    "php" : "^7.3|^8.0"
  },
  "require-dev": {
    "phpunit/phpunit" : "^7.0|^8|^9",
    "squizlabs/php_codesniffer": "^3.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "AllDigitalRewards\\LanguageMapper\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AllDigitalRewards\\Tests\\": "./tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "check-style": "vendor/bin/phpcs -p --standard=phpcs.xml src",
    "fix-style": "vendor/bin/phpcbf -p --standard=phpcs.xml src"
  }
}
